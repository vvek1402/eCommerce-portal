<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-light accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="E-Commerce Portal">
                <div class="sidebar-brand-text mx-3">E-Commerce Portal</div>
            </a>
            <hr class="sidebar-divider my-0">
            <li class="nav-item active">
