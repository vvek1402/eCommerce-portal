                        <a class="collapse-item" href="@Url.Action("outfordeliverOrder", "Admin", new { area = "admin" })">Out For Delivery </a>
                    </div>
                </div>
            </li>
            <li class="nav-item active">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#return" aria-expanded="true"
                   aria-controls="collapseForm">
                    <i class="fa fa-undo"></i>
                    <span>Return Order </span>
                </a>
                <div id="return" class="collapse " aria-labelledby="headingForm" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("returnpanding", "Admin", new { area="admin" })">Pending Request</a>
                        <a class="collapse-item" href="@Url.Action("returnaccepted", "Admin", new { area = "admin" })">Accepted Request</a>
