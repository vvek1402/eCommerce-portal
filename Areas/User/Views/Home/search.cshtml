@model E_Commerce.Models.SeachViewModel
@{
    ViewBag.Title = "shop";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="@Url.Action("home")" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Category
        </span>
    </div>
</div>
<div class="bg0 m-t-23 p-b-140">
    <div class="container">
        <div class="flex-w flex-sb-m p-b-52">


            <div class="flex-w flex-c-m m-tb-10">
                <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
                    <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
                    <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Filter
                </div>


            </div>

            <!-- Search product -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <div class="bor8 dis-flex p-l-15">
                    <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                        <i class="zmdi zmdi-search"></i>
                    </button>

                    <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search">
                </div>
            </div>

            <!-- Filter -->
            <div class="dis-none panel-filter w-full p-t-10">
                <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Sort By
                        </div>

                        <ul>
                            @if (Request.QueryString["sortOrder"] == null)
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = "", rating = Request.QueryString["rating"] })" class="filter-link stext-106 trans-04 filter-link-active">
                                        Default
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = "", rating = Request.QueryString["rating"] })" class="filter-link stext-106 trans-04">
                                        Default
                                    </a>
                                </li>
                            }
                            @if (Request.QueryString["sortOrder"] == "ltoh")
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = "ltoh", rating = Request.QueryString["rating"] })" class="filter-link stext-106 trans-04 filter-link-active">
                                        Price: Low to High
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = "ltoh" })" class="filter-link stext-106 trans-04 ">
                                        Price: Low to High
                                    </a>
                                </li>
                            }

                            @if (Request.QueryString["sortOrder"] == "htol")
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = "htol", rating = Request.QueryString["rating"] })" class="filter-link stext-106 trans-04 filter-link-active">
                                        Price: High to Low
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = "htol", rating = Request.QueryString["rating"]  })" class="filter-link stext-106 trans-04">
                                        Price: High to Low
                                    </a>
                                </li>

                            }
                        </ul>
                    </div>

                    <div class="filter-col2 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Rating
                        </div>

                        <ul>
                            @if (Request.QueryString["rating"] == null)
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="" })" class="filter-link stext-106 trans-04 filter-link-active">
                                        All
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="" })" class="filter-link stext-106 trans-04 ">
                                        All
                                    </a>
                                </li>
                            }


                            @if (Request.QueryString["rating"] == "4")
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="4" })" class="filter-link stext-106 trans-04 filter-link-active">
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        & up
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="4" })" class="filter-link stext-106 trans-04">
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        & up
                                    </a>
                                </li>
                            }

                            @if (Request.QueryString["rating"] == "3")
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="3" })" class="filter-link stext-106 trans-04 filter-link-active">
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        & up
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="3" })" class="filter-link stext-106 trans-04">
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        & up
                                    </a>
                                </li>
                            }

                            @if (Request.QueryString["rating"] == "2")
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="2" })" class="filter-link stext-106 trans-04 filter-link-active">
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        & up
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="2" })" class="filter-link stext-106 trans-04">
                                        <i class="zmdi zmdi-star"></i>
                                        <i class="zmdi zmdi-star"></i>
                                        & up
                                    </a>
                                </li>
                            }

                            @if (Request.QueryString["rating"] == "1")
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="1" })" class="filter-link stext-106 trans-04 filter-link-active ab-b-l">
                                        <i class="zmdi zmdi-star"></i>
                                        & up
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("search", "Home", new { area = "User", searchinput = Request.QueryString["searchinput"], sortOrder = Request.QueryString["sortOrder"],rating="1" })" class="filter-link stext-106 trans-04">
                                        <i class="zmdi zmdi-star"></i>
                                        & up
                                    </a>
                                </li>
                            }


                        </ul>
                    </div>


                </div>
            </div>
        </div>

        <div class="row isotope-grid" ng-app="myApp" ng-controller="myCtrl">

            @foreach (var product in Model.productList)
            {
                var image = Model.imageList.Where(x => x.product_variant_id == product.product_variant_id).SingleOrDefault();
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item ">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <img src="@image.main_image" alt="IMG-PRODUCT" style=" height:300px;">

                            <a href="@Url.Action("productdetail", "Home", new { id = product.product_id, area = "User" })" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                Quick View
                            </a>
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @product.product_variant_title
                                </a>

                                <span class="stext-105 cl3">
                                    Rs. @product.Selling_price
                                </span>
                            </div>

                            <div class="block2-txt-child2 flex-r p-t-3">
                                <button ng-click="addwishlist(@product.product_variant_id)" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04" src="~/Includes/images/icons/icon-heart-01.png" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Includes/images/icons/icon-heart-02.png" alt="ICON">
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</div>

<script>

    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {

        $scope.addwishlist = function (id) {
            $http({
                method: "POST",
                url: "/User/Home/addwishlist/" + id
            }).then(function mySuccess(response) {
                reloadwhislistcount();

            }, function myError(response) {

                swal({
                    text: "Try Again",
                    icon: "error",
                    button: "Ok",
                });
            });
        }

    });


</script>
